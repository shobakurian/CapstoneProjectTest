<div class="restuarentDetails">
<h1 class="display-4">{{restaurant.name}}</h1>
<div class="mt-3 mb-5">
    <p><strong>Location:</strong> {{restaurant.borough}}</p>
    <p><strong>Cuisine:</strong> {{restaurant.cuisine}}</p>
    <p>
        <strong>Address:</strong>
        {{restaurant.address.building}} {{restaurant.address.street}},
        Zipcode: {{restaurant.address.zipcode}}
    </p>
</div>

<h2>Grades</h2>
{{#if restaurant.grades.length}}
<div class="list-group mt-3">
    {{#each restaurant.grades}}
    <div class="list-group-item">
        Date: {{this.date}}, Grade: {{this.grade}}, Score: {{this.score}}
    </div>
    {{/each}}
</div>
{{else}}
<p>No grades available.</p>
{{/if}}

<!-- Edit Button -->
<a href="/api/restaurants/edit/{{restaurant._id}}" class="btn btn-primary mt-4">Edit Restaurant</a>

<!-- Delete Button  -->
<form action="/api/restaurants/delete/{{restaurant._id}}?_method=DELETE" method="POST" style="display: inline-block;">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn btn-danger mt-4 ml-2" onclick="return confirm('Are you sure you want to delete this restaurant?');">Delete Restaurant</button>
</form>
</div>

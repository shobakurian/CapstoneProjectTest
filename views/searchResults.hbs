<div class="container mt-5">
    <h1 class="mb-3 text-center">Search Results for the Restaurant </h1>
    <table class="table table-hover">
        <!-- Table header -->
        <thead class="thead-light">
            <tr>
                <th>Restaurant Id</th>
                <th>Name</th>
                <th>Borough</th>
                <th>Address</th>
                <th>Cuisine</th>
                <th> </th>
                 <th> </th>
            </tr>
        </thead>
        <tbody>
            <!-- Display the found restaurant -->
            <tr>
                <td>{{restaurant._id}}</td>
                <td><strong>{{restaurant.name}}</strong></td>
                <td>{{restaurant.borough}}</td>
                <td>{{restaurant.address.street}}</td>
                <td>{{restaurant.cuisine}} Cuisine</td>
                 <td>
                    <a href="/restaurants/{{restaurant._id}}" class="btn btn-primary edit-btn">View</a>
                </td>
            </tr>
        </tbody>
    </table>
</div>
